                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Orientation="Horizontal">
                                    <Button BackgroundColor="DimGray" Text="{Binding Nombre}" TextColor="White" Margin="10,20,0,20" FontSize="35" Padding="10,5,10,10" CornerRadius="30" WidthRequest="60" HeightRequest="60"/>
                                    <StackLayout>
                                        <Label Text="{Binding Nombre}" Margin="0" TextColor="Black" FontSize="22" FontAttributes="Bold"/>
                                        <Label Text="{Binding Numero}" Margin="0" TextColor="DarkSlateGray" FontSize="18" FontAttributes="Bold"/>
                                        <Label Text="{Binding Correo}" Margin="0" TextColor="DarkSlateGray" FontSize="16" FontAttributes="Italic"/>
                                    </StackLayout>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
            <Label IsVisible="false" Grid.Row="0" x:Name="labelVacioP" Text="Aún no ha añadido ningún Proveedor" TextColor="Gray" FontSize="22" HorizontalOptions="Center" VerticalOptions="Center"/>
            <Button Grid.Row="0" x:Name="AgregarContactoProveedores" Clicked="AgregarContactoProveedores_Clicked" Text="+" HorizontalOptions="End" VerticalOptions="End" Margin="15" FontSize="40" TextColor="white" BackgroundColor="Green" CornerRadius="35" WidthRequest="70" HeightRequest="70" Padding="0,5,0,10"/>
        </Grid>
    </ContentPage>
