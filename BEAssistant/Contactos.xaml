<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BEAssistant.Contactos">
    <ContentPage Title="Cliente">
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <StackLayout Grid.Row="0">
                    <ListView x:Name="listContactosClientes" Scrolled="listContactosClientes_Scrolled" ItemSelected="listContactosClientes_ItemSelected" RowHeight="100" SeparatorColor="Gray">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <StackLayout Orientation="Horizontal">
                                        <Button BackgroundColor="DimGray" Text="{Binding Nombre}" TextColor="White" Margin="10,20,0,20" FontSize="35" Padding="10,5,10,10" CornerRadius="30" WidthRequest="60" HeightRequest="60"/>
                                        <StackLayout>
                                            <Label Text="{Binding Nombre}" Margin="0" TextColor="Black" FontSize="22" FontAttributes="Bold"/>
                                            <Label Text="{Binding Numero}" Margin="0" TextColor="DarkSlateGray" FontSize="18" FontAttributes="Bold"/>
                                            <Label Text="{Binding Correo}" Margin="0" TextColor="DarkSlateGray" FontSize="16" FontAttributes="Italic"/>
                                        </StackLayout>
                                    </StackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
                <Label IsVisible="false" Grid.Row="0" x:Name="labelVacioC" Text="Aún no ha añadido ningún Cliente" TextColor="Gray" FontSize="22" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Button Grid.Row="0" x:Name="AgregarContactoCliente" Clicked="AgregarContactoCliente_Clicked" Text="+" HorizontalOptions="End" VerticalOptions="End" Margin="15" FontSize="40" TextColor="white" BackgroundColor="Green" CornerRadius="35" WidthRequest="70" HeightRequest="70" Padding="0,5,0,10"/>
            </Grid>
        </StackLayout>
    </ContentPage>
